%% Structures
\setbeamercolor{frametitle}{fg=hawbeamer@blue}
\setbeamercolor{framesubtitle}{fg=hawbeamer@gray}

%% Text
\setbeamercolor{normal text}{fg=hawbeamer@black, bg=hawbeamer@white}
\setbeamercolor{structure}{fg=hawbeamer@black, bg=hawbeamer@white}
\setbeamercolor{alerted text}{fg=hawbeamer@midblue}

%% Items and links
\setbeamercolor{item}{fg=hawbeamer@blue}
\setbeamercolor{footnote mark}{fg=hawbeamer@blue}
\hypersetup{urlcolor=hawbeamer@blue}

%% Blocks
\definecolor{blockLightGreen}{HTML}{14B03D}
\setbeamercolor{example text}{fg=blockLightGreen}
\setbeamercolor{titlelike}{use=normal text, parent=normal text}
\setbeamercolor{palette primary}{%
  use=normal text,
  fg=normal text.bg,
  bg=normal text.fg
}

\setbeamercolor{block title}{%
  use=normal text,
  fg=normal text.fg,
  bg=normal text.bg!80!fg
}
\setbeamercolor{block body}{
  use={block title, normal text},
  bg=block title.bg!50!normal text.bg
}
\setbeamercolor{block title alerted}{%
    use={block title, alerted text},
    bg=block title.bg,
    fg=alerted text.fg
}
\setbeamercolor{block title example}{%
    use={block title, example text},
    bg=block title.bg,
    fg=example text.fg
}
\setbeamercolor{block body alerted}{use=block body, parent=block body}
\setbeamercolor{block body example}{use=block body, parent=block body}

%% Title
\setbeamercolor{title}{fg=hawbeamer@blue, bg=hawbeamer@white}
\setbeamercolor{subtitle}{fg=hawbeamer@blue, bg=hawbeamer@white}
\setbeamercolor{author}{fg=hawbeamer@black, bg=hawbeamer@white}

%% Footline
\setbeamercolor{footline}{fg=hawbeamer@blue}
\setbeamercolor{page number in head/foot}{fg=hawbeamer@black}

