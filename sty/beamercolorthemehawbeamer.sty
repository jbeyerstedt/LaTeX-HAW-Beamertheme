%% Structures
\setbeamercolor{frametitle}{fg=hawbeamer@blue}
\setbeamercolor{framesubtitle}{fg=hawbeamer@gray}

%% Text
\setbeamercolor{normal text}{fg=hawbeamer@black, bg=hawbeamer@white}
\setbeamercolor{structure}{fg=hawbeamer@black, bg=hawbeamer@white}
\setbeamercolor{alerted text}{fg=hawbeamer@midblue}

\addtobeamertemplate{block begin}{%
  \ifhawbeamer@dark\else % alerted text in plain blocks at light slides
    \setbeamercolor{alerted text}{fg=hawbeamer@darkRed}
  \fi
}{}

%% Items and links
\setbeamercolor{item}{fg=hawbeamer@blue}
\setbeamercolor{footnote mark}{fg=hawbeamer@blue}
\hypersetup{urlcolor=hawbeamer@blue}

