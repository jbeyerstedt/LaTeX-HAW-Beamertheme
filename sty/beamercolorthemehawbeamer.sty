\definecolor{hawbeamer@black}{HTML}{2B2E34}
\definecolor{hawbeamer@white}{HTML}{FFFFFF}
\definecolor{hawbeamer@blue}{HTML}{003CA0}      % CMYK 100, 70, 0, 6
\definecolor{hawbeamer@lightblue}{HTML}{A0BEDC} % CMYK  42, 16, 4, 0
\definecolor{hawbeamer@midblue}{HTML}{0096D2}   % CMYK  85, 21, 0, 0

\colorlet{hawbeamer@lightGray}{white!80!hawbeamer@black}
\colorlet{hawbeamer@gray}{white!35!hawbeamer@black}
\colorlet{hawbeamer@darkGray}{white!20!hawbeamer@black}
\definecolor{hawbeamer@lightRed}{HTML}{FF8E6B}
\colorlet{hawbeamer@darkRed}{red!80!hawbeamer@white}

